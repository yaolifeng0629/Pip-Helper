{
  "name": "Video-Pip",
  "description": "manifest.json description",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "entrypoints/background.ts"
  },
  "action": {
    "default_popup": "entrypoints/popup/index.html",
    "default_icon": {
      "16": "public/icon/icon16.png",
      "32": "public/icon/icon32.png",
      "48": "public/icon/icon48.png",
      "96": "public/icon/icon96.png",
      "128": "public/icon/icon128.png"
    }
  },
  "commands": {
    "activate-pip": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "一键激活画中画"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["entrypoints/content.ts"]
    }
  ]
}
